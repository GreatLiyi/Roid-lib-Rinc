<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
		android:layout_gravity="center" android:orientation="vertical"
		android:background="@drawable/umeng_fb_gray_frame">
		<TextView android:id="@+id/umeng_fb_new_reply_alert_title"
			android:layout_width="fill_parent" android:layout_height="40dip"
			android:text="@string/UMNewReplyAlertTitle" android:textColor="@android:color/white"
			android:textSize="20dip" android:gravity="center"
			android:background="@drawable/title_bg" />
		<TextView android:id="@+id/umeng_fb_new_dev_reply_box"
			android:text="This is the reply from dev" android:layout_marginTop="10dip"
			android:textSize="19dip" android:textColor="#6F6F6F" android:gravity="center_vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="8dip" android:layout_marginRight="8dip"
			android:minHeight="110dip" />
		<View android:layout_height="3dip" android:layout_width="fill_parent"
			android:layout_marginTop="3dip" android:layout_marginBottom="1dip"
			android:background="#E5E5E5" />
		<LinearLayout 
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_gravity="bottom" 
			android:orientation="horizontal"
			android:layout_marginBottom="5dp" 
			android:layout_marginTop="5dp"
			android:background="#E0E0E0" >
			<Button 
			    android:id="@+id/umeng_fb_exitBtn"
				android:layout_width="0dip" 
				android:layout_weight="1"
				android:background="@drawable/btn_common"
				android:textColor="@color/dark_text" 
				android:layout_height="40dp"
				android:text="@string/UMFeedbackGotIt"/>
			<Button 
			    android:id="@+id/umeng_fb_see_detail_btn"
				android:layout_width="0dip" 
				android:layout_weight="1" 
				android:background="@drawable/btn_common"
				android:textColor="@color/dark_text" 
				android:layout_height="40dip"
				android:text="@string/UMFeedbackSeeDetail"
				android:layout_marginLeft="5dp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>